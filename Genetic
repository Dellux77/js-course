    this.creatures = Array(100).fill().map(() => new Creature());
    this.matingPool = [];
  }

  evaluate() {
    let maxFit = 0;
    // Calculate fitness: (1 / distanceToTarget)
    this.creatures.forEach(c => {
       c.calcFitness();
       if(c.fitness > maxFit) maxFit = c.fitness;
    });
