// 1. Generate Heightmap
function generateTerrain(width, height) {
    const map = [];
    for(let x=0; x<width; x++) {
        for(let y=0; y<height; y++) {
            // noise.perlin2 is from external library
            map[x][y] = noise.perlin2(x/scale, y/scale); 
        }
    }
    return map;
}

